<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout android:background="@color/colorWhite"
        android:padding="@dimen/padding_title_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_thongtin_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/imgBtn_cancel_thongtinsuco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_gravity="right"
            android:contentDescription="Đóng popup"
            android:src="@drawable/ic_cancel"
            tools:ignore="RtlSymmetry" />
    </FrameLayout>

    <ListView
        android:id="@+id/lstview_thongtinsuco"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

</LinearLayout>