<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item_frag"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/frag_image_content_description" />

        <TextView
            android:id="@+id/txt_title_item_frag"
            style="@style/MyTextAppearance.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_subtitle_item_frag"
            style="@style/MyTextAppearance.Black.Small.Italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
