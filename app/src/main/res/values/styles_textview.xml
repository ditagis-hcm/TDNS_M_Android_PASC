<resources>

    <style name="MyTextAppearance.Red" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>
    <style name="MyTextAppearance.Black" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyTextAppearance.Black.Small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="MyTextAppearance.Black.Small.Italic" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="MyTextAppearance.White.Small" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
